# Alpaca API Keys (Get from: https://alpaca.markets)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Groq API Key for sentiment analysis (Optional - Get from: https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Trading Configuration
MAX_POSITION_SIZE=10000.0
MAX_PORTFOLIO_RISK=0.02
GAP_MIN_PERCENT=2.0
GAP_MAX_PERCENT=15.0
VOLUME_RATIO_MIN=1.5
SENTIMENT_THRESHOLD=0.5

# Strategy Settings
STRATEGY_MODE=paper
ENABLE_LIVE_TRADING=false

# Database
DATABASE_URL=sqlite+aiosqlite:///./gap_scanner.db

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=1

# Logging
LOG_LEVEL=INFO

# CORS (for development, use specific origin in production)
CORS_ORIGINS=["*"]
